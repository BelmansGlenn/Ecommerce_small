{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="formCo" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}


    <h1>Veuillez vous connecter</h1> 
    <label for="inputEmail">Votre e-mail</label>
    <input class="inputFco" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="exemple@gmail.com" required autofocus>
    <label for="inputPassword">mot de passe</label>
    <input class="inputFco" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="saisissez votre mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button type="submit">
        <i class="fas fa-long-arrow-alt-right"></i>
    </button>
</form>
<button class="insCo">
    <a href="{{ path("register") }}">S'inscrire</a>
</button>
{% endblock %}


