
{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block body %}
    <section class="changeMdpForm fixFormHack">
        <h1>Ajouter une adresse</h1>
        {{ form_start(addressForm) }}
        {{ form_row(addressForm.name) }}
        {{ form_row(addressForm.firstname) }}
        {{ form_row(addressForm.lastname) }}
        {{ form_row(addressForm.company)}}
        {{ form_row(addressForm.address)}}
        {{ form_row(addressForm.postal)}}
        {{ form_row(addressForm.city)}}
        {{ form_row(addressForm.country)}}
        {{ form_row(addressForm.phone)}}
        {{ form_end(addressForm) }}
        <button class="annulerMdp"><a href="{{ path('account_address') }}">Retour</a></button>

    </section>


{% endblock %}
