{% extends 'base.html.twig' %}
{% block title %}
    Confirmation commande
{% endblock %}
{% block body %}
<section class="errorSuccesPay">
    <h1>Confirmation de commande</h1>
    <div class="errorsBox successBox">
        <p>Bonjour <span>{{ orderValidated.user.firstname }} {{ orderValidated.user.lastname }}</span></p>
        <p>Nous vous remercions pour votre commande n°{{ orderValidated.reference }}.</p>
        <p>Un email vous a été envoyé à l'adresse: <br>{{ orderValidated.user.email }}</p>
    </div>
    <button><a href="{{ path('account_order') }}">Suivre votre commande</a></button>
{% endblock %}

