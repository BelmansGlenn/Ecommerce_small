{% extends 'base.html.twig' %}
{% block title %}
    Erreur de Paiement
{% endblock %}
{% block body %}
<section class="errorSuccesPay">
    <h1>Erreur de Paiement</h1>
    <div class="errorsBox">
        <p>Bonjour <span>{{ failedOrder.user.firstname }} {{ failedOrder.user.lastname }}</span></p>
        <p>Une erreur est survenue lors du paiement de la commande n°{{ failedOrder.reference }}.</p>
        <p>Un email vous a été envoyé à l'adresse: <br>{{ failedOrder.user.email }}</p>
    </div>
    <button><a href="{{ path('order') }}">Réessayer le paiement</a></button>
{% endblock %}